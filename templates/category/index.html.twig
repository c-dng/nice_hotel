{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
<div class="container">

    <h1 class="text-center mt-3">Liste des catégories</h1>

    <div class="text-center mt-3 mb-3">
        <a class="btn btn-primary" href="{{ path('app_category_new') }}"> <i class="fas fa-plus"></i> Ajouter une nouvelle catégorie </a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td class="d-flex justify-content-around">
                    <a class="btn btn-primary" href="{{ path('app_category_show', {'id': category.id}) }}"> <i class="far fa-eye"></i> </a>
                    <a class="btn btn-primary" href="{{ path('app_category_edit', {'id': category.id}) }}"> <i class="fas fa-edit"></i> </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
