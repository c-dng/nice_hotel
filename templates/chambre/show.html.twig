{% extends 'base.html.twig' %}

{% block title %}Chambre{% endblock %}

{% block body %}

<div class="container">

    <a class="btn btn-light mt-2 ms-2" href="{{ path('app_chambre_index') }}">
      <i class="fas fa-undo-alt"></i>
        Retour
    </a>

	<h1 class="text-center mt-3">Chambre</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ chambre.id }}</td>
			</tr>
			<tr>
				<th>Tarif</th>
				<td>{{ chambre.tarif }}</td>
			</tr>
			<tr>
				<th>Titre</th>
				<td>{{ chambre.titre }}</td>
			</tr>
			<tr>
				<th>Numero</th>
				<td>{{ chambre.numero }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ chambre.description }}</td>
			</tr>
			<tr>
				<th>Image</th>
				<td><img src="{{ asset('images/' ~ chambre.image) }}" alt="" style="width:200px"></td>
			</tr>
			<tr>
				<th>Status</th>
				<td>{{ chambre.status ? 'Yes' : 'No' }}</td>
			</tr>
		</tbody>
	</table>

    <div class="d-flex justify-content-center">

		<a class="btn btn-primary" href="{{ path('app_chambre_edit', {'id': chambre.id}) }}">Editer</a>

		{# {{ include('chambre/_delete_form.html.twig') }} #}

		<form method="post" action="{{ path('app_chambre_delete', {'id': chambre.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
			<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ chambre.id) }}">
			<button class="btn btn-danger">Supprimer</button>
		</form>

    </div>

</div>


{% endblock %}
