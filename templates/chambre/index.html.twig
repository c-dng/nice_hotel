{% extends 'base.html.twig' %}

{% block title %}Liste des chambres{% endblock %}

{% block body %}

<div class="container">

    <h1 class="text-center mt-3">Liste des chambres</h1>

    <div class="text-center mt-3 mb-3">
        <a class="btn btn-primary" href="{{ path('app_chambre_new') }}"> <i class="fas fa-plus"></i> Ajouter une nouvelle chambre </a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tarif</th>
                <th>Titre</th>
                <th>Numero</th>
                <th>Description</th>
                <th>Image</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chambre in chambres %}
            <tr>
                <td>{{ chambre.id }}</td>
                <td>{{ chambre.tarif }}</td>
                <td>{{ chambre.titre }}</td>
                <td>{{ chambre.numero }}</td>
                <td>{{ chambre.description }}</td>
                <td><img src="{{ asset('images/' ~ chambre.image) }}" alt="" style="width:150px"></td>
                <td>{{ chambre.status ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_chambre_show', {'id': chambre.id}) }}"><i class="far fa-eye"></i></a>
                    <a href="{{ path('app_chambre_edit', {'id': chambre.id}) }}"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>

{% endblock %}
